use windows::Win32::Graphics::{Direct3D11::{ID3D11Device, ID3D11DeviceContext}, Dxgi::{IDXGISwapChain, IDXGIOutput}};
"#;

#[size(8), align(8)]
extern type ID3D11Device;

#[size(8), align(8)]
